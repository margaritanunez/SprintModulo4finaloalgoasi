<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/otro_adobe_express"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/Infopersonal"
        android:layout_width="397dp"
        android:layout_height="183dp"
        android:layout_marginBottom="50dp"
        android:background="#DDFFFFFF"
        android:gravity="center"
        android:text="Soy Andy Cornelio. Ingeniero y modelo de Android. Años de experiencia 2. Nivel de entusiasmo: alto."
        android:textColor="#AB000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.937" />

    <Button
        android:id="@+id/infoDeContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D3FFFFFF"
        android:text="Información de Contacto"
        android:textColor="#DF000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Infopersonal" />
</androidx.constraintlayout.widget.ConstraintLayout>